<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="성청하"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a4a4a4"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="청하 / _.bluelinda"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="숙명여자대학교 문화관광학과, IT 공학 복수 전공"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:text="SOPT 24기 안드로이드 파트, 미디어팀\nSOPT 25기 안드로이드 파트, 미디어팀"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#a4a4a4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_hobby"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:background="#F8E0F7">

                <TextView
                    android:id="@+id/txt_hobby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="취미"
                    android:textColor="#6e6e6e" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_hobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="1dp"
                        app:srcCompat="@drawable/h_1" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="1dp"
                        app:srcCompat="@drawable/h_2" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="1dp"
                        app:srcCompat="@drawable/h_3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="1dp"
                        app:srcCompat="@drawable/h_4" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="1dp"
                        app:srcCompat="@drawable/h_5" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="1dp"
                        app:srcCompat="@drawable/h_6" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_like_things"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#F8E0F7"
                android:layout_marginVertical="1dp">

                <TextView
                    android:id="@+id/txt_like_things"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="좋아하는 것"
                    android:textColor="#6e6e6e"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_like_things"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="1dp"
                        app:srcCompat="@drawable/t_1" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="1dp"
                        app:srcCompat="@drawable/t_2" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="1dp"
                        app:srcCompat="@drawable/t_3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="1dp"
                        app:srcCompat="@drawable/t_4" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/t_5" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="1dp"
                        app:srcCompat="@drawable/t_6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="1dp"
                        app:srcCompat="@drawable/t_7" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="1dp"
                        app:srcCompat="@drawable/t_8" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginVertical="1dp"
                        android:layout_marginHorizontal="1dp"
                        app:srcCompat="@drawable/t_9" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_hate_things"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#F8E0F7"
                android:layout_marginVertical="1dp">

                <TextView
                    android:id="@+id/txt_hate_things"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="싫어하는 것"
                    android:textColor="#6e6e6e"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_hate_things"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- 치즈"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- 까르보나라"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- 크림 파스타"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- 치즈 떡볶이"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- 단팥죽"></TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>